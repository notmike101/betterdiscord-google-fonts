{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "react-jsx",
    "allowJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src*"],
      "~/*": ["./*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}